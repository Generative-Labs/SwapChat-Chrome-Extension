{
  "manifest_version": 2,
  "name": "house studio chat",
  "version": "1.0.0",
  "description": "house studio跨平台聊天插件",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "background": {
//    "page": "background.html"
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "house studio跨平台聊天插件",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/jquery-3.5.1.min.js",
        "js/commonJs.js"
      ],
      "css": [
        "css/custom.css"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*/*.png",
        "*://*/*.jpg",
        "*://*/*.gif",
        "*://*/*.bmp"
      ],
      "js": [
        "js/commonJs.js"
      ]
    }
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  //   普通页面能够直接访问的插件资源列表，如果不设置是无法直接访问的
  //    "web_accessible_resources": [
  //      "js/inject.js"
  //    ],
  "homepage_url": "https://www.baidu.com",
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "omnibox": {
    "keyword": "go"
  },
  "default_locale": "zh_CN",
  "devtools_page": "devtools.html"
}
